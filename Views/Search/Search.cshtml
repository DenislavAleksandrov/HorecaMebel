@model HorecaMebel.Models.Search.SearchViewModel
@using HorecaMebel.Resources
@{
    ViewBag.Title = "Search";
}

<section id="content">
    <div class="container_24">
        <div class="wrapper">

            <div style="margin-top:10px;height:35px;width:270px;float:right;">
                <select  style="width:100%;height:85%" data-selector="OrderElements">

                    @foreach (SelectListItem element in (List<SelectListItem>)ViewBag.OrderBy)
                    {
                        if (element.Selected)
                        {
                            <option selected="selected" value="@element.Value">@element.Text</option>
                        }
                        else
                        {
                            <option value="@element.Value">@element.Text</option>
                        }
                    }
                </select>
            </div>


            <div class="container" data-selector="Container"></div>

        </div>
    </div>
</section>

<script src="~/Scripts/Project/Search/SearchOnPage.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        SearchOnPage.Init(JSON.parse(JSON.stringify(@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject((Model.Armchairs))))),
                          JSON.parse(JSON.stringify(@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject((Model.Sofas))))),
                          JSON.parse(JSON.stringify(@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject((Model.CubeSeat))))),
                          JSON.parse(JSON.stringify(@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject((Model.Chairs))))),
                          '@ViewBag.SearchPattern',
                          '@Resources.Armchairs',
                          '@Resources.Sofas',
                          '@Resources.CubeSeats',
                          '@Resources.Chairs');
    });
</script>