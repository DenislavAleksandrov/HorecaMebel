@model HorecaMebel.Models.Armchairs.ListOfArmchairs
@using HorecaMebel.Resources
@using HorecaMebel.Models.EF
@{
    ViewBag.Title = "List";
}

<section id="content">
    <div class="container_24">
        <div class="wrapper">
            <article class="grid_24">
                <div class="inner-block">
                    <div style="float:left;width:72%"><h2>@Resources.Armchairs</h2></div>

                    <div style="margin-top:10px;height:35px">
                        <select class="w35" style="width:28%;height:85%" data-selector="OrderElements">

                            @foreach (SelectListItem element in (List<SelectListItem>)ViewBag.OrderBy)
                            {
                                if (element.Selected)
                                {
                                    <option selected="selected" value="@element.Value">@element.Text</option>
                                }
                                else
                                {
                                    <option value="@element.Value">@element.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                
                <div class="clearfix"></div>

                <div data-selector="AllArmchairContainer"></div>
              
                <div class="clear"></div>
                <div class="divHeight5Px"></div>
                <div class="divHeight5Px"></div>
            </article>
        </div>
    </div>
</section>

<script src="~/Scripts/Project/Armchairs/ArmchairList.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        ArmchairList.Init(JSON.parse(JSON.stringify(@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject((Model.AllArmchairs))))));
    });
</script>